<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FileCloud</title>
    <link rel="shortcut icon" href="~/Content/img/cloud.png" type="image/x-icon">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link href="~/Content/css/materialize.min.css" rel="stylesheet"
          type="text/css" />
    <link href="~/Content/css/dropzone.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/basic.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript"
            src="https://code.jquery.com/jquery-2.2.1.min.js"></script>
    <script src="~/Content/js/materialize.js"></script>
     <script src=@Url.Content("~/scripts/dropzone.js")></script>
    <script src=@Url.Content("~/scripts/jquery-1.10.2.min.js")></script>
    
</head>
<body bgcolor="#e3f2fd">

    <nav>
        <div class="nav-wrapper blue lighten-2">
            <img src="~/Content/img/cloud.png" style="max-width:100%;max-height:100%">
            <a class="brand-logo">FileCloud</a>
            <a class="center">@Session["LogedUser"]</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("UserPage","Index","UserPage",null,new {id="user_text"})</li>
                <li><a href="collapsible.html">About</a></li>
                <li><a class='white-text dropdown-button btn-flat' id="account_button" data-activates='dropdown1'>Account</a></li>
            </ul>
            <!-- Dropdown Structure -->
            <ul id='dropdown1' class='dropdown-content'>
               
                <li>@Html.ActionLink("Sign In", "Index","Login")</li>
                <li>@Html.ActionLink("Register","Index","Register")</li>
            </ul>
            <!-- Dropdown Structure -->
        </div>      
     </nav>
   
    @*<script src=@Url.Content("~/scripts/modal.js")>    </script>*@


    @RenderBody()

    <footer class="page-footer blue lighten-2">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">FileCloud Application</h5>
                    <p class="grey-text text-lighten-4">Doğukan Uçak</p>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                © 2014 Copyright Text
                <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
            </div>
        </div>
    </footer>


    <script src=@Url.Content("~/scripts/dropdownscript.js")></script>
    
    
    @if (Session["LogedUser"] != null)
    {
    <script src=@Url.Content("~/scripts/changeNav.js")></script>
    }
    



</body>
</html>